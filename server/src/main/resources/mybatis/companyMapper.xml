<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.company.repository.companyMapper">
    <select id="getFilteredCompany" resultType="com.example.demo.company.entity.Company">
        SELECT * FROM company
        <where>
            <if test="sales_id != null">sales_id = #{sales_id}</if>
            <if test="sector != null">AND sector = #{sector}</if>
            <if test="sizeMin != null">AND size > #{sizeMin} </if>
            <if test="sizeMax != null">AND size <![CDATA[ < ]]> #{sizeMax} </if>
            <!-- <if test="searchText != null">
                AND 
                (
                    description LIKE '%${searchText}%'
                    OR
                    reference LIKE '%${searchText}%'
                )
            </if> -->
        </where>
        ORDER BY ${sort} ${order}
        LIMIT #{take}
        OFFSET #{start}
    </select>

    <select id="getCompanyCount" resultType="String">
        SELECT count(*) FROM company
      <where>
            <if test="sales_id != null">sales_id = #{sales_id}</if>
            <if test="sector != null">AND sector = #{sector}</if>
            <if test="sizeMin != null">AND size > #{sizeMin} </if>
            <if test="sizeMax != null">AND size <![CDATA[ < ]]> #{sizeMax} </if>
            <!-- <if test="searchText != null">
                AND 
                (
                    description LIKE '%${searchText}%'
                    OR 
                    reference LIKE '%${searchText}%'
                )
            </if> -->
        </where> 
    </select>

    <select id="idName" resultType="com.example.demo.company.entity.Company">
        SELECT *
        FROM table
        WHERE id IN
        <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
          #{id}
        </foreach>
    </select>
</mapper>