<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.task.repository.TaskMapper">
    <select id="getAllTasks" resultType="com.example.demo.task.entity.Task">
        SELECT * FROM task
        <where>
            <if test="contact_id != null">contact_id = #{contact_id}</if>
            <!-- <if test="searchText != null">
                AND 
                (
                    description LIKE '%${searchText}%'
                    OR
                    reference LIKE '%${searchText}%'
                )
            </if> -->
        </where>
        ORDER BY ${sort} ${order}
        LIMIT #{take}
        OFFSET #{start}
    </select>

    <select id="getContactCount" resultType="String">
        SELECT count(*) FROM task
        <where>
            <if test="contact_id != null">contact_id = #{contact_id}</if>
            <!-- <if test="searchText != null">
                AND 
                (
                    description LIKE '%${searchText}%'
                    OR 
                    reference LIKE '%${searchText}%'
                )
            </if> -->
        </where>
    </select>

    <select id="getContactsByIds" resultType="com.example.demo.task.entity.Task">
        SELECT *
        FROM task
        WHERE id IN
        <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
          #{id}
        </foreach>
    </select>
</mapper>